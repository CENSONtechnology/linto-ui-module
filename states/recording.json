{
    "state_name" : "recording", 
    "animation" : "recording",
    "buttons" : ["recording_button", "mute_button", "cancel_button"],
    "events" : {
        "broker_message": {

        },
        "button_clicked": {
            "mute_button": {
                "on": {
                    "state" : "paused",
                    "publish" : {
                    "topic" : "ui/mute_on",
                    "message" : "{\"on\":\"%(DATE)\"}"
                    }
                }

            },
            "cancel_button": {
                "clicked" : {
                    "mode": "command",
                    "publish" : {
                        "topic" : "lintoclient/action",
                        "message" : "{\"on\":\"%(DATE)\", \"value\":\"stop_meeting\"}"
                    }
                }
            }
        }
    }
}