{
    "broker_msg":{
        "wuw/wuw-spotted": {
            "any":{
                "display": "happy"
            }
        },
        "utterance/start": {
            "any":{
                "display" : "listening",
                "sound" : "beep1"
            }
        },
        "utterance/stop" :{
            "any":{
                "display": "idle"
            }
        },
        "tts/speaking/start": {
            "any": {
                "display": "speaking"
            }
        },
        "tts/speaking/stop" : {
            "any": {
                "display" : "idle"
            }
        },
        "ui/connected": {

        },
        "ui/disconnected" : {

        },
        "lintoclient/request/send" : {
            "any": {
                "display": "com"
            }
        }
    },

    "touch_input":{
        "mute_button":{
            "on" : {
                "display": "sleeping",
                "publish": {
                    "topic" : "ui/mute_on",
                    "message" : "{\"on\":\"%DATE\"}"
                },
                "anim_lock" : true
            },
            "off" : {
                "display": "idle",
                "publish": {
                    "topic" : "ui/mute_off",
                    "message" : "{\"on\":\"%DATE\"}"
                },
                "anim_lock" : false
            }
        }
    },

    "internal" : {
        "connecting": {
            "display" : "com"
        },
        "connected": {
            "display" : "idle"
        }
    }
}