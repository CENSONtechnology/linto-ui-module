{
    "broker_msg":{
        "wuw/wuw-spotted": {
            "any":{
                "display": "happy"
            }
        },
        "utterance/start": {
            "any":{
                "display" : "listening",
                "sound" : "beep1"
            }
        },
        "utterance/stop" :{
            "any":{
                "display": "idle",
                "sound": "beep2"
            }
        },
        "tts/speaking/start": {
            "any": {
                "display": "speaking"
            }
        },
        "tts/speaking/stop" : {
            "any": {
                "display" : "idle"
            }
        },
        "lintoclient/connected": {
            "any": {
                "ring" : "ring_green",
                "display" : "idle"
            }
        },
        "lintoclient/disconnected" : {
            "any": {
                "display" : "error",
                "ring" : "ring_red"
            }

        },
        "lintoclient/request/send" : {
            "any": {
                "display": "com"
            }
        }
    },

    "touch_input":{
        "mute_button":{
            "on" : {
                "display": "sleeping",
                "publish": {
                    "topic" : "ui/mute_on",
                    "message" : "{\"on\":\"%DATE\"}"
                },
                "anim_lock" : true
            },
            "off" : {
                "display": "idle",
                "publish": {
                    "topic" : "ui/mute_off",
                    "message" : "{\"on\":\"%DATE\"}"
                },
                "anim_lock" : false
            }
        },
        "volume_button": {
            "full": {
                "volume": 100
            },
            "mid": {
                "volume": 50
            },
            "low": {
                "volume": 25
            },
            "silenced": {
                "volume": 0
            }
        }
    },

    "internal" : {
        "connecting": {
            "display" : "com"
        },
        "connected": {
            "display" : "idle"
        }
    }
}