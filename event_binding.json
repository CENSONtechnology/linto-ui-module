{
    "broker_msg":{
        "wuw": {
            "wuw-spotted":{
                "display": "happy"
            }
        },
        "utterance": {
            "utterance_start":{
                "display" : "listening",
                "sound" : "beep1"
            },
            "utterance_end" :{
                "display": "idle"
            },
            "timeout" : {
                "display": "idle"
            }
        },
        "tts": {
            "speaking_start": {
                "display": "speaking"
            },
            "speaking_stop": {
                "display": "idle"
            } 
        }
    },

    "touch_input":{
        "mute_button":{
            "on" : {
                "display": "sleeping",
                "publish": {
                    "topic" : "ui_event",
                    "message" : "mute_on"
                }
            },
            "off" : {
                "display": "idle",
                "publish": {
                    "topic" : "ui_event",
                    "message" : "mute_off"
                }
            }
        }
    },

    "internal" : {
        "connecting": {
            "display" : "com",
            "publish": {
                "topic" : "ui_event",
                "message" : "connecting"
            }
        },
        "connected": {
            "display" : "idle",
            "publish": {
                "topic" : "ui_event",
                "message" : "connected"
            }
        }
    }
}