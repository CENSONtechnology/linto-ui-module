{
    "broker_msg":{
        "wuw/wuw-spotted": {
            "any":{
                "display": "happy"
            }
        },
        "utterance/start": {
            "any":{
                "display" : "listening",
                "sound" : "beep1",
                "buttons": {
                    "cancel_button" : true
                }
            }
        },
        "utterance/stop" :{
            "any":{
                "display": "idle",
                "sound": "beep2",
                "buttons": {
                    "cancel_button" : false
                }
            }
        },
        "tts/speaking/start": {
            "any": {
                "display": "speaking"
            }
        },
        "tts/speaking/stop" : {
            "any": {
                "display" : "idle"
            }
        },
        "lintoclient/connected": {
            "any": {
                "ring" : "ring_green",
                "connexion" : true,
                "display" : "idle",
                "buttons" : {
                    "mute_button" : true,
                    "volume_button" : true
                }
            }
        },
        "lintoclient/disconnected" : {
            "any": {
                "display" : "error",
                "ring" : "ring_red",
                "connexion": false,
                "buttons" : {
                    "mute_button" : false,
                    "volume_button" : false
                }
            }

        },
        "lintoclient/request/send" : {
            "any": {
                "display": "com"
            }
        },
        "lintoclient/mode/meeting" : {
            "any": {
                "display" : "meeting",
                "buttons" : {
                    "mute_button" : false,
                    "volume_button" : false,
                    "recording_button" : true
                }
            }
        }
    },

    "touch_input":{
        "mute_button":{
            "on" : {
                "display": "sleeping",
                "publish": {
                    "topic" : "ui/mute_on",
                    "message" : "{\"on\":\"%DATE\"}"
                },
                "anim_lock" : true,
                "buttons" : {
                    "cancel_button" : false
                }
            },
            "off" : {
                "display": "idle",
                "publish": {
                    "topic" : "ui/mute_off",
                    "message" : "{\"on\":\"%DATE\"}"
                },
                "anim_lock" : false
            }
        },
        "volume_button": {
            "full": {
                "volume": 100
            },
            "mid": {
                "volume": 50
            },
            "low": {
                "volume": 25
            },
            "silenced": {
                "volume": 0
            }
        },
        "cancel_button": {
            "clicked" : {
                "display": "idle",
                "buttons" : {
                    "cancel_button" : false
                },
                "publish" : {
                    "topic" : "ui/cancel",
                    "message" : "{\"on\":\"%DATE\"}"

                }                
            }
        }, 
        "empty_button": {
            "clicked": {
                "display": "happy"
            }
        }
    },

    "internal" : {
        "connecting": {
            "display" : "com"
        },
        "connected": {
            "display" : "idle"
        }
    }
}